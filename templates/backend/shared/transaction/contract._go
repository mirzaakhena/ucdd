package transaction

import "context"

// Transaction is
type Transaction interface {
	GetDB(db context.Context, withTransaction bool) context.Context // this is for get the database with two mode with transaction or without transaction
	CommitTransaction(db context.Context)                           // commit the transaction
	RollbackTransaction(db context.Context)                         // rollback transaction
	RollbackTransactionOnException(db context.Context)              // for emergency rollback
}
